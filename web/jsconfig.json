{
	// See https://go.microsoft.com/fwlink/?LinkId=759670
	// for the documentation about the jsconfig.json format
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators":true
	},
	 "paths": {
      "app/*": ["./src/app/*"],
	  "lib/*": ["./src/app/lib/*"],
	  "modules/*": ["./src/app/modules/*"]
    },
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages",
		"tmp",
		"temp"
	]
}
